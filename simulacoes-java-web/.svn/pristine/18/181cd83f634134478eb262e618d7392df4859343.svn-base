function alterarParagrafo(){
	var paragrafoSelecionado = document.getElementById("paragrafo");
	paragrafoSelecionado.innerHTML = "Aprendendo JavaScript";
	paragrafoSelecionado.style.fontSize = "25px";
	
	if(paragrafoSelecionado.style.color == "blue"){
		paragrafoSelecionado.style.color = "red";
	}else{
		paragrafoSelecionado.style.color = "blue";
	}
}